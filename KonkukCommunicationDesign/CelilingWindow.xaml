<Window x:Class="KonkukCommunicationDesign.CeilingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CelilingWindow" Height="300" Width="300" KeyUp="Window_KeyUp_1" Background="Black" Closing="Window_Closing_1" SizeChanged="Window_SizeChanged_1" StateChanged="Window_StateChanged_1" ResizeMode="NoResize" WindowStyle="None" MouseLeftButtonDown="Window_MouseLeftButtonDown_1" MouseMove="Window_MouseMove_1" MouseLeftButtonUp="Window_MouseLeftButtonUp_2">
    
    <Canvas Name="CanvasForObject" HorizontalAlignment="Left" VerticalAlignment="Top">
        <Image Name="CeilingDisplay" Stretch="Fill" RenderTransformOrigin="0.5, 0.45">
            <Image.RenderTransform>
                <ScaleTransform ScaleX="-0.95" ScaleY="-1.2">
                </ScaleTransform>
            </Image.RenderTransform>
        </Image>
        <Label Name="log" Foreground="White" Content="Log.." Canvas.Top="-27"></Label>
        <Label Foreground="White" Name="MarkerIndex" Content="Label" Canvas.Top="-150" FontSize="70" Width="996"/>
    </Canvas>
</Window>
